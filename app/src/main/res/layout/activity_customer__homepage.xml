<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_Homepage">

    <FrameLayout
        android:id="@+id/customerHomePFrame"
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:layout_above="@+id/customerBottomNav"
        android:layout_below="@+id/customerToolbar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="@color/cardview_light_background">


    </FrameLayout>

    <include
        layout="@layout/toobar"
        android:id="@+id/customerToolbar"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/customerBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        app:menu="@menu/customer_nav_menu" />

</RelativeLayout>