<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nature"
    tools:context=".Shop_Registration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="333dp"
            android:layout_height="490dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/shopkeeperName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_logo"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="Enter the Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/shopkeeperContact"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_logo"
                android:drawableLeft="@drawable/call"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="Enter Phone number"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/shopkeeperEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_logo"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="Enter the email"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/customer_Password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_logo"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="Enter the Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/customerRegistration"
                android:layout_width="147dp"
                android:layout_height="64dp"
                android:layout_marginTop="30dp"
                android:drawableRight="@drawable/forward"
                android:text="Next"
                android:textColor="#1635EF"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>