<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171819"
    tools:context=".foodItemDescription">

    <ImageView
        android:id="@+id/cfoodImage"
        android:layout_width="370dp"
        android:layout_height="219dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp">

    </ImageView>

    <Button
        android:id="@+id/addToCart"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#FB8C00"
        android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
        android:text="Add to cart"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buyNow"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/addToCart"
        android:background="#B9FFFFFF"
        android:drawableLeft="@drawable/ic_baseline_done_all_24"
        android:text="Place Order"
        android:textColor="#CA1414"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cFoodName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/cfoodImage"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/food_item"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#8E24AA"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cFooddescri"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:layout_below="@id/cFoodName"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="21dp"
        android:drawableLeft="@drawable/description"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#43A047"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cFoodPrice"
        android:layout_width="139dp"
        android:layout_height="55dp"
        android:layout_below="@id/cFooddescri"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#F4511E"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="96dp"
        android:layout_height="51dp"
        android:layout_below="@+id/cFooddescri"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:text="Quantity"
        android:textColor="#039BE5"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="89dp"
        android:layout_height="55dp"
        android:layout_above="@+id/addToCart"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/totalPrice"
        android:layout_toLeftOf="@+id/totalPrice"
        android:gravity="center_vertical"
        android:text="Total"
        android:textColor="#3949AB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_above="@+id/addToCart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="17dp"
        android:text="TextView"
        android:textColor="#5E35B1"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/cFoodQuantity"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cFooddescri"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="number"
        android:text="0"
        android:textColor="#D81B60"
        android:textSize="24sp" />


</RelativeLayout>