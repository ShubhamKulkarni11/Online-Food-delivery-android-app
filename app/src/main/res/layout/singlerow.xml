<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="387dp"
        android:layout_margin="10dp"
        android:background="#EDFDD835"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/FoodImage"
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:layout_marginBottom="10dp"

            android:src="@drawable/ic_baseline_add_24"
            app:srcCompat="@drawable/addphoto"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/FoodName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"

            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#470259"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"

            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#06800C"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cartdeleteFoodItems"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="236dp"
                android:layout_marginRight="236dp"
                android:drawableLeft="@drawable/ic_baseline_delete_outline_24"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#0A3D8A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editFooditems"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:gravity="center"
                android:text="Edit"
                android:textColor="#0A3D8A"
                android:textSize="20sp"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/cartTotalPrice"
                android:layout_width="159dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="200dp"
                android:layout_marginLeft="200dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="10dp"
                android:gravity="right|center_vertical"
                android:text="TextView"
                android:textColor="#BD0D0D"
                android:textSize="26sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/holo_red_dark" />

    </LinearLayout>


</androidx.cardview.widget.CardView>