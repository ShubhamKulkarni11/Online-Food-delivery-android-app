<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:background="#C125B32B"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cartFoodName"
            android:layout_width="351dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"

            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#470259"
            android:textSize="24sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="143dp">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="152dp"
                android:layout_height="61dp"
                android:gravity="clip_horizontal|center_horizontal|center_vertical"
                android:text="Quantity"
                android:textColor="#1C2FA6"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/cartQuantity"
                android:layout_width="154dp"
                android:layout_height="58dp"
                android:layout_above="@+id/cartTotalPrice"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="67dp"
                android:layout_marginRight="67dp"
                android:layout_marginBottom="14dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#4D11C8"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="159dp"
                android:layout_height="57dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Total Price"
                android:textColor="#1C0DA1"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/cartTotalPrice"
                android:layout_width="159dp"
                android:layout_height="57dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="65dp"
                android:layout_marginRight="65dp"
                android:layout_marginBottom="13dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="TextView"
                android:textColor="#BD0D0D"
                android:textSize="26sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cartdeleteFoodItems"
            android:layout_width="110dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_baseline_delete_outline_24"
            android:gravity="center"
            android:text="Delete"
            android:textColor="#0A3D8A"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/holo_red_dark" />

    </LinearLayout>


</androidx.cardview.widget.CardView>