<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseImage"
    android:id="@+id/chooseImage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#272626"
        >


        <Button
            android:id="@+id/chooseFile"
            android:layout_width="143dp"
            android:layout_height="58dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="15dp"

            android:text="Choose File" />

        <EditText
            android:id="@+id/FoodName"
            android:layout_width="241dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_toEndOf="@+id/chooseFile"
            android:layout_toRightOf="@+id/chooseFile"
            android:ems="10"
            android:hint="Food Name"
            android:inputType="textPersonName"
            tools:ignore="DuplicateIds" />

        <EditText
            android:id="@+id/foodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="87dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="number" />

        <ImageView
            android:id="@+id/choosedImage"
            android:layout_width="match_parent"
            android:layout_height="416dp"
            android:layout_above="@+id/foodPrice"
            android:layout_below="@+id/chooseFile"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="38dp" />


        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="141dp" />

        <Button
            android:id="@+id/uploadItem"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="83dp"
            android:text="Upload" />

        <TextView
            android:id="@+id/back"
            android:layout_width="197dp"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp"
            android:layout_marginBottom="-6dp"
            android:background="#235BC8"
            android:drawableRight="@android:drawable/ic_media_next"
            android:gravity="center"
            android:text="Back"
            android:textSize="30dp"
            app:drawableTint="#BD0F0F">

        </TextView>


    </RelativeLayout>

</FrameLayout>