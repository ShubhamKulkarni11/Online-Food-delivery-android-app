<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopOwnerProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#C0CA33">


        <ImageButton
            android:id="@+id/backHome2"
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:background="#C0CA33"
            app:srcCompat="@drawable/backarrow"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="67dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_toStartOf="@+id/logoutProfile"
            android:layout_toLeftOf="@+id/logoutProfile"

            android:gravity="center"
            android:text="Account Setting"
            android:textColor="#ED1A1A"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/logoutProfile"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:text="Logout"
            android:textColor="#DD1010"
            android:textSize="18sp" />


    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="437dp"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/shopOwnerProfileName"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="352dp"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/shopOwnerEmail"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="272dp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/shopOwnerContact"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="193dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="24sp" />


</RelativeLayout>